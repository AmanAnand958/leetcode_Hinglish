{
  "manifest_version": 3,
  "name": "LeetCode to Hinglish",
  "version": "1.0.0",
  "description": "Convert LeetCode problem descriptions and examples to Hinglish",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.leetcode.com/*",
    "https://api.routeway.ai/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*", "https://www.leetcode.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Hinglish Translator"
  },
  "options_page": "options.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
